<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapperInterface.MemberMapper" >

<select id="selectList" resultType="vo.MemberVO">
	select * from member order by id 
</select>

<select id="selectOne" resultType="vo.MemberVO" >
	select * from member where id=#{id}
</select>
<!-- #{id} : parameter 로 전달된 vo 의 id 라는 컬럼의 value 가 전달됨  
			 -> getId() 로 처리함	-->

<insert id="insert">
	insert into member values( #{id},#{password},#{name},default,default )
</insert>

<update id="update">
	update member set password=#{password},name=#{name} where id=#{id}
</update>

<delete id="delete">
	delete from member where id=#{id}
</delete>

</mapper>  